<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_create_group"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <ImageView
        android:id="@+id/empty_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/empty_thumbnail" />

    <TextView
        android:id="@+id/new_group_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="小组名称：__________________"
        android:layout_marginTop="20dp"
        android:layout_below="@id/empty_image"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/new_group_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="小组类型：__________________"
        android:layout_marginTop="20dp"
        android:layout_below="@id/new_group_name"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/new_group_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="小组地区：__________________"
        android:layout_marginTop="20dp"
        android:layout_below="@id/new_group_category"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/new_group_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="简单描述：__________________"
        android:layout_marginTop="20dp"
        android:layout_below="@id/new_group_location"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        />

    <Button
        android:id="@+id/create_new_group"
        style="?android:textAppearanceSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/new_group_description"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:text="创建新小组"
        android:textStyle="bold"
        />

</RelativeLayout>