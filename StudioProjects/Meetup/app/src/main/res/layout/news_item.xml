<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cv_news"
        >

        <RelativeLayout
            android:id="@+id/news_item_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#f4f4f4"
            android:paddingBottom="40dp"
            >

            <ImageView
                android:id="@+id/group_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:padding="0dp"
                android:src="@drawable/round_thumbnail" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/group_name"
                android:text="Group Name"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_toRightOf="@id/group_icon"
                android:layout_marginLeft="20dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/no_of_group_members"
                android:text="No. of members"
                android:textSize="15sp"
                android:layout_toRightOf="@id/group_icon"
                android:layout_below="@id/group_name"
                android:layout_marginLeft="20dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/when_posted"
                android:text="When Posted"
                android:textSize="15sp"
                android:layout_toRightOf="@id/group_icon"
                android:layout_below="@id/no_of_group_members"
                android:layout_marginLeft="20dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/news_caption"
                android:text="Event Caption/Name"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_below="@id/group_icon"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/news_teaser"
                android:text="(Teaser/Summary)"
                android:textSize="15sp"
                android:layout_below="@id/news_caption"
                android:textAlignment="center"
                />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/news_image"
                android:layout_marginTop="10dp"
                android:layout_below="@id/news_teaser"
                android:padding="0dp"
                android:src="@drawable/empty_thumbnail_news"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/no_of_likes_and_comments"
                android:text="5 Likes, 5 Comments"
                android:textSize="15sp"
                android:layout_below="@id/news_image"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/like"
                android:text="Like"
                android:textSize="15sp"
                android:layout_below="@id/no_of_likes_and_comments"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="120dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/comment"
                android:text="Comment"
                android:textSize="15sp"
                android:layout_below="@id/no_of_likes_and_comments"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="200dp"
                />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>