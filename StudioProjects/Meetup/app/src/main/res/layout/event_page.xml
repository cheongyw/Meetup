<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <ImageView
        android:id="@+id/organiser_dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/round_thumbnail" />

    <TextView
        android:id="@+id/organiser_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Organiser Name"
        android:layout_toRightOf="@id/organiser_dp"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:layout_marginLeft="20dp"
        />


    <View
        android:id="@+id/divider1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/organiser_dp"
        android:layout_marginTop="20dp"
        android:background="@android:color/black"/>

    <TextView
        android:id="@+id/event_name_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Event Name"
        android:layout_below="@id/divider1"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:layout_marginLeft="20dp"
        />

    <ImageView
        android:id="@+id/event_picture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/event_name_1"
        android:layout_centerHorizontal="true"
        android:src="@drawable/empty_thumbnail" />

    <View
        android:id="@+id/divider2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/event_picture"
        android:layout_marginTop="20dp"
        android:background="@android:color/black"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/event_location"
        android:text="Location"
        android:textSize="15sp"
        android:layout_below="@id/divider2"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:layout_marginLeft="20dp"        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sign_up_for_event"
        android:text="Sign Up!"
        android:textSize="15sp"
        android:layout_below="@id/divider2"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/event_time"
        android:text="Time"
        android:textSize="15sp"
        android:layout_below="@id/divider2"
        android:layout_marginRight="20dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
         />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:id="@+id/event_summary"
        android:text="(Summary)"
        android:textSize="15sp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/sign_up_for_event"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/event_description_text"
        android:text="Detailed description"
        android:textSize="15sp"
        android:layout_below="@id/event_summary"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:textStyle="bold"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/event_description_text"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/event_description_text"
            android:padding="10dp"
            android:layout_marginTop="20dp"
            android:background="#f4f4f4"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/event_description"
                android:text="(Detailed description)"
                android:textSize="15sp"
                />

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
