<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.cheong.meetup.NewEventActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_create_event"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <ImageView
        android:id="@+id/empty_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/empty_thumbnail" />

    <TextView
        android:id="@+id/new_event_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/new_event_name"
        android:layout_marginTop="20dp"
        android:layout_below="@id/empty_image"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/new_event_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="项目地点：__________________"
        android:layout_marginTop="20dp"
        android:layout_below="@id/new_event_name"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/new_event_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/new_event_date"
        android:layout_marginTop="20dp"
        android:layout_below="@id/new_event_location"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/new_event_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/new_event_description"
        android:layout_marginTop="20dp"
        android:layout_below="@id/new_event_date"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        />

    <Button
        android:id="@+id/create_new_event"
        style="?android:textAppearanceSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/new_event_description"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:text="@string/create_new_event"
        android:textStyle="bold"></Button>

</RelativeLayout>
